{
  "name": "64tass-langserv",
  "displayName": "64tass Language Support",
  "description": "Language support for 64tass MOS 6502 macro assembler",
  "version": "0.0.1",
  "license": "MIT",
  "publisher": "64tass",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "64tass",
        "aliases": [
          "64tass",
          "6502 Assembly"
        ],
        "extensions": [
          ".asm",
          ".s",
          ".inc",
          ".src"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "64tass",
        "scopeName": "source.64tass",
        "path": "./syntaxes/64tass.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[64tass]": {
        "editor.colorDecorators": false
      }
    }
  },
  "scripts": {
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.3.0"
  }
}
