{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "tass64",
  "scopeName": "source.tass64",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#opcodes" },
    { "include": "#directives" },
    { "include": "#labels" },
    { "include": "#registers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.semicolon.tass64",
          "match": ";.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tass64",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.tass64",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.tass64",
          "begin": "'",
          "end": "'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.tass64",
          "match": "\\$[0-9a-fA-F]+"
        },
        {
          "name": "constant.numeric.binary.tass64",
          "match": "%[01]+"
        },
        {
          "name": "constant.numeric.decimal.tass64",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "opcodes": {
      "patterns": [
        {
          "name": "keyword.mnemonic.tass64",
          "match": "(?i)\\b(adc|and|asl|bcc|bcs|beq|bit|bmi|bne|bpl|brk|bvc|bvs|clc|cld|cli|clv|cmp|cpx|cpy|dec|dex|dey|eor|inc|inx|iny|jmp|jsr|lda|ldx|ldy|lsr|nop|ora|pha|php|pla|plp|rol|ror|rti|rts|sbc|sec|sed|sei|sta|stx|sty|tax|tay|tsx|txa|txs|tya|ane|arr|asr|dcp|isb|jam|lax|lds|rla|rra|sax|sbx|sha|shs|shx|shy|slo|sre|ahx|alr|axs|dcm|ins|isc|lae|las|lxa|tas|xaa)\\b"
        }
      ]
    },
    "directives": {
      "patterns": [
        {
          "name": "keyword.control.tass64",
          "match": "(?i)\\.(if|else|elsif|elif|endif|fi|switch|case|default|endswitch|ifeq|ifmi|ifne|ifpl)\\b"
        },
        {
          "name": "keyword.control.loop.tass64",
          "match": "(?i)\\.(for|bfor|endfor|next|rept|brept|endrept|while|bwhile|endwhile|continue|break|breakif|continueif)\\b"
        },
        {
          "name": "keyword.control.block.tass64",
          "match": "(?i)\\.(proc|pend|endp|endproc|block|bend|endblock|macro|endm|endmacro|function|endf|endfunction|struct|ends|endstruct|union|endu|endunion|section|send|endsection|segment|endsegment|namespace|endn|endnamespace|comment|endc|endcomment|weak|endweak|with|endwith|encode|endencode|alignblk|endalignblk|page|endpage|logical|endlogical|virtual|endv|endvirtual)\\b"
        },
        {
          "name": "keyword.directive.data.tass64",
          "match": "(?i)\\.(byte|word|long|dword|addr|rta|text|ptext|null|shift|shiftl|fill|align|binary|include|binclude|char|dint|lint|sint|dsection|dstruct|dunion|offs|tdef)\\b"
        },
        {
          "name": "keyword.directive.tass64",
          "match": "(?i)\\.(org|cpu|enc|cdef|edef|assert|error|warn|cerror|cwarn|var|let|const|here|as|option|eor|seed|proff|pron|hidemac|showmac|al|alignind|alignpageind|check|from|lbl|goto|databank|dpage|autsiz|mansiz|sfunction|xl|xs|end)\\b"
        },
        {
          "name": "keyword.operator.assignment.tass64",
          "match": ":?="
        }
      ]
    },
    "labels": {
      "patterns": [
        {
          "name": "entity.name.function.label.tass64",
          "match": "^[a-zA-Z_][a-zA-Z0-9_]*:"
        },
        {
          "name": "entity.name.function.label.local.tass64",
          "match": "^[+\\-]"
        }
      ]
    },
    "registers": {
      "patterns": [
        {
          "name": "variable.language.register.tass64",
          "match": "(?i)\\b[axy]\\b"
        }
      ]
    }
  }
}
